package gui;

import javax.swing.*;
import java.awt.*;
import java.awt.event.MouseAdapter;
import java.awt.event.MouseEvent;

public class SidebarItem extends JPanel {

    private boolean active;

    private final Color ACTIVE_COLOR = new Color(255, 87, 34);
    private final Color NORMAL_COLOR = new Color(33, 168, 124);
    private final Color HOVER_COLOR = new Color(45, 185, 140);

    public SidebarItem(String text, boolean active) {

        this.active = active;

        setLayout(new BorderLayout());
        setMaximumSize(new Dimension(Integer.MAX_VALUE, 45));
        setCursor(new Cursor(Cursor.HAND_CURSOR));
        setBorder(BorderFactory.createEmptyBorder(10, 15, 10, 15));

        JLabel label = new JLabel(text);
        label.setForeground(Color.WHITE);
        label.setFont(new Font("Segoe UI", Font.BOLD, 14));

        add(label, BorderLayout.CENTER);

        if (active) {
            setBackground(ACTIVE_COLOR);
        } else {
            setBackground(NORMAL_COLOR);
        }

        // Hover effect
        addMouseListener(new MouseAdapter() {
            @Override
            public void mouseEntered(MouseEvent e) {
                if (!SidebarItem.this.active) {
                    setBackground(HOVER_COLOR);
                }
            }

            @Override
            public void mouseExited(MouseEvent e) {
                if (!SidebarItem.this.active) {
                    setBackground(NORMAL_COLOR);
                }
            }
        });
    }
}
